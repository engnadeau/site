---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Content from '~/components/widgets/Content.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'Nicholas Nadeau | AI & Tech Innovator',
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    id="hero"
    title="Nicholas Nadeau"
    tagline="AI & Emerging Tech Expert | Investor | Mentor"
    actions={[
      { variant: 'primary', text: 'Connect with Me', href: 'https://www.linkedin.com/in/engnadeau/', target: '_blank' },
      { variant: 'secondary', text: 'Explore My Work', href: '#about' },
    ]}
  >
    <Fragment slot="subtitle">
      Building the future of AI and tech. <br />
      Empowering startups, advancing innovation, and investing in transformative ideas.
    </Fragment>
  </Hero>

  <!-- About Me -->
  <Content
    id="about"
    columns={2}
    items={[
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://www.linkedin.com/in/engnadeau/',
        },
      },
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'GitHub',
          href: 'https://github.com/engnadeau',
        },
      },
    ]}
    image={{
      src: '~/assets/images/nicholas.jpg',
      alt: 'Nicholas Nadeau',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h2>
      <p>
        I’m an AI and tech innovator with a Ph.D. in AI, robotics, and engineering, focused on creating practical,
        high-impact solutions that redefine what’s possible in AI, data, and emerging tech. As an advisor and serial
        CTO, I’ve led major advancements across AI-driven applications, pushing the boundaries of human-AI
        collaboration.
      </p>
    </Fragment>
  </Content>

  <!-- Portfolio -->
  <Brands
    title="Portfolio, Advisory, and Mentorship"
    id="portfolio"
    subtitle="Empowering innovation with strategic guidance and investment."
    icons={[]}
    images={[
      {
        src: '~/assets/images/logos/acrylicrobotics.png',
        alt: 'Acrylic Robotics',
      },
      {
        src: '~/assets/images/logos/bridgr.png',
        alt: 'BRIDGR',
      },
      {
        src: '~/assets/images/logos/cdl.png',
        alt: 'Creative Destruction Lab',
      },
      {
        src: '~/assets/images/logos/nextai.png',
        alt: 'Next AI',
      },
      {
        src: '~/assets/images/logos/xmachina.png',
        alt: 'X Machina AI',
      },
      {
        src: '~/assets/images/logos/xpr.png',
        alt: 'XPR Labs',
      },
    ]}
  />

  <!-- Blog -->
  <BlogLatestPosts id="blog" title="Latest Posts" />
</Layout>
