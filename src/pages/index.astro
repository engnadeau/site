---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'Nicholas Nadeau | AI & Tech Innovator',
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    id="hero"
    title="Nicholas Nadeau"
    tagline="AI & Emerging Tech Expert | Investor | Mentor"
    actions={[
      { variant: 'primary', text: 'Connect with Me', href: 'https://www.linkedin.com/in/engnadeau/', target: '_blank' },
      { variant: 'secondary', text: 'Explore My Work', href: '#about' },
    ]}
    image={{ src: '~/assets/images/hero-nicholas.jpg', alt: 'Nicholas Hero Image' }}
  >
    <Fragment slot="subtitle">
      Building the future of AI and tech. <br />
      Empowering startups, advancing innovation, and investing in transformative ideas.
    </Fragment>
  </Hero>

  <!-- About Me -->
  <Content
    id="about"
    columns={2}
    items={[
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'LinkedIn',
          href: 'https://www.linkedin.com/in/engnadeau/',
        },
      },
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'GitHub',
          href: 'https://github.com/engnadeau',
        },
      },
    ]}
    image={{
      src: '~/assets/images/nicholas.jpg',
      alt: 'Nicholas Nadeau',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h2>
      <p>
        I’m an AI and tech innovator with a Ph.D. in AI and engineering, focused on creating practical, high-impact
        solutions that redefine what’s possible in AI, data, and emerging tech. As an advisor and former CTO, I’ve led
        major advancements across AI-driven applications, pushing the boundaries of human-AI collaboration and ethical
        data use.
      </p>
      <br />
      <p>
        My work with startups through platforms like Creative Destruction Lab and Next AI centers on building scalable,
        transformative technology. I help founders cut through complexity, align with market needs, and deliver results
        that matter. My hands-on experience includes launching initiatives that have secured significant investments and
        redefined tech solutions in AI and robotics.
      </p>
    </Fragment>
  </Content>

  <!-- Portfolio -->
  <Brands
    title="Portfolio & Advisory Roles"
    subtitle="Empowering innovation with strategic guidance and investment."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
        alt: 'Ebay',
      },

      {
        src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png',
        alt: 'Youtube',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
        alt: 'Microsoft',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Node JS',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
        alt: 'Google',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png',
        alt: 'Meta',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
        alt: 'Yahoo',
      },
    ]}
  />

  <!-- Blog -->
  <BlogLatestPosts id="blog" title="Latest Posts" />

  <!-- CTA -->
  <CallToAction
    title="Let’s Connect"
    subtitle="Reach out on LinkedIn"
    actions={[
      {
        variant: 'primary',
        text: 'Connect on LinkedIn',
        href: 'https://www.linkedin.com/in/engnadeau/',
        target: '_blank',
      },
    ]}
  />
</Layout>
